{
	"compilerOptions": {
		"paths": {
			"$lib": [
				"./components"
			],
			"$lib/*": [
				"./components/*"
			]
		},
		"rootDirs": ["."],
		"importsNotUsedAsValues": "error",
		"isolatedModules": true,
		"preserveValueImports": true,
		"lib": [
			"esnext",
			"DOM",
			"DOM.Iterable"
		],
		"moduleResolution": "node",
		"module": "esnext",
		"target": "esnext"
	},
	"include": [
		"ambient.d.ts",
		"./types/**/$types.d.ts",
		"./vite.config.ts",
		"./src/**/*.js",
		"./src/**/*.ts",
		"./src/**/*.svelte",
		"./tests/**/*.js",
		"./tests/**/*.ts",
		"./tests/**/*.svelte"
	],
	"exclude": [
		"./node_modules/**",
		"./src/service-worker.js",
		"./src/service-worker.ts",
		"./src/service-worker.d.ts"
	]
}
